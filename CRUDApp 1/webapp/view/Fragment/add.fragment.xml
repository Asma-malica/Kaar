					<f:content>
						<Label text="Employee Name"/>
						<Input id="fempname" value=""/>
						<Label text="Employee Age"/>
						<Input id="fempage" value=""/>
						<Label text="Employee Role"/>
						<Input id="femprole" value=""/>
						<Label text="Employee Salary"/>
						<Input id="fempsalary" value=""/>
						
					</f:content>
					
				</f:SimpleForm>
			</l:content>
		</l:Grid>
		<buttons>
			<Button text="SAVE" press="onAddCreate"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>